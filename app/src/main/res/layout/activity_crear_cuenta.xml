<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearCuenta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bannercrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/naranjita">

            <ImageView
                android:id="@+id/atrascrear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/arrow_back_ios_new_24dp_f2cda2_fill0_wght400_grad0_opsz24"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintTop_toBottomOf="@id/bannercrear"
            android:id="@+id/til1crear"
            android:layout_width="200dp"
            android:layout_margin="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet1crear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Nombre" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            app:layout_constraintBottom_toBottomOf="@id/til1crear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/til1crear"
            app:layout_constraintTop_toTopOf="@id/til1crear" />


        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintTop_toBottomOf="@id/til1crear"
            android:id="@+id/til2crear"
            android:layout_width="200dp"
            android:layout_margin="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet2crear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="ContraseÃ±a" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pass"
            app:layout_constraintBottom_toBottomOf="@id/til2crear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/til2crear"
            app:layout_constraintTop_toTopOf="@id/til2crear" />

        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintTop_toBottomOf="@id/til2crear"
            android:id="@+id/til3crear"
            android:layout_width="200dp"
            android:layout_margin="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet3crear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Correo" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="E-mail"
            app:layout_constraintBottom_toBottomOf="@id/til3crear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/til3crear"
            app:layout_constraintTop_toTopOf="@id/til3crear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/naranjota"
            app:cornerRadius="5dp"
            android:text="Guardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til3crear" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>